{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["src/types", "node_modules/@types"],
    "types": ["node", "jest"]
  },
  "include": ["src/**/*", "jest.setup.ts"],
  "exclude": ["node_modules", "dist"]
}
